<%= render 'layouts/header' %>

<h1>Your Receipt</h1>

<table style="margin: 0 auto">
  <thead>
  <tr>
    <th>Quantity</th>
    <th>Name</th>
    <th>Price</th>
  </tr>
  </thead>
  <tbody>
  <%= render partial: 'line_item', collection: @order.line_items %>
  <tr>
    <td></td>
    <td><b>Sales Taxes: </b></td>
    <td><b><%= number_with_precision(@order.total_taxes, :precision => 2) %></b></td>
  </tr>
  <tr>
    <td></td>
    <td><b>Total: </b></td>
    <td><b><%= number_with_precision(@order.total, :precision => 2) %></b></td>
  </tr>
  </tbody>
</table>
